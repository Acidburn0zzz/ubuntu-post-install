#!/bin/bash

dir="$(dirname "$0")"

source $dir/functions/third-party/dropbox
source $dir/functions/third-party/google-chrome
source $dir/functions/third-party/gnome
source $dir/functions/third-party/minecraft
source $dir/functions/third-party/owncloud
source $dir/functions/third-party/rvm
source $dir/functions/third-party/slack
source $dir/functions/third-party/steam
source $dir/functions/third-party/sublime-text-3

# THIRD PARTY APPLICATIONS
function thirdparty {
echo ''
show_question 'What would you like to install? '
echo ''
show_listitem '\t1. Google Chrome?'
show_listitem '\t2. Dropbox?'
show_listitem '\t3. Steam?'
show_listitem '\t4. Sublime Text 3?'
show_listitem '\t5. Minecraft?'
show_listitem '\t6. ownCloud?'
show_listitem '\t7. Slack?'
show_listitem '\t8. Ruby Version Manager (RVM)?'
show_listitem '\t9. Latest GNOME desktop?'
show_listitem '\tr. Return'
echo ''
show_question 'Enter your choice:' && read REPLY
case $REPLY in
    1) google-chrome;;
    2) dropbox;;
    3) steam;;
    4) sublime-text-3;;
    5) minecraft;;
    6) owncloud;;
    7) slack;;
    8) rvm;;
    9) gnome;;
    # Return
    [Rr]*) clear && main;;
    # Invalid choice
    * )  clear && show_error '\aNot an option, try again.' && thirdparty;;
esac
}