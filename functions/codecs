#!/bin/bash

# INSTALL UBUNTU RESTRICTED EXTRAS
function codecs {
echo ''
show_question 'Install Ubuntu Restricted Extras? (Y)es, (N)o :'
read REPLY
case $REPLY in
# Positive action
[Yy]* ) 
    show_info 'Installing...'
    show_warning 'Requires root privileges:'
    sudo apt-get install -y ubuntu-restricted-extras
    show_success 'Done.'
    main
    ;;
# Negative action
[Nn]* )
    clear && main;;
# Error
* )
    clear && show_error '\aSorry, try again.' 
    codecs
    ;;
esac
}