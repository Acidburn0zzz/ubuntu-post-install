#!/bin/bash

#----- DECLARATIONS -----#

dir="$(dirname "$0")"

DESIGN="$dir/data/design.list"

#INSTALL DESIGN TOOLS
function design {
echo ''
show_info 'Installing favourite design tools...'
echo ''
echo 'Current package list:'
echo ''
for package in $(cat $DESIGN)
do 
echo -e '\t'$package
done
echo ''
show_question 'Proceed? (Y)es, (N)o : ' && read REPLY
echo ''
case $REPLY in
# Positive action
[Yy]* ) 
    show_warning 'Requires root privileges:'
    # Feel free to change the contents of "design-tools.list" in the data folder to whatever suits your preference.
    sudo apt-get install -y $(cat $DESIGN)
    show_success 'Done.'
    main
    ;;
# Negative action
[Nn]* ) 
    clear && main
    ;;
# Error
* )
    clear && show_error '\aSorry, try again.' && design
    ;;
esac
}