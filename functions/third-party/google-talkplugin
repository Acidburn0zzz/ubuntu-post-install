#!/bin/bash

# Google Talk Plugin
function google-talkplugin {
	show_info 'Downloading Google Talk Plugin...'
	# Download Debian file that matches system architecture
	case `uname -i` in
	i386|i486|i586|i686)
	    curl -O https://dl.google.com/linux/direct/google-talkplugin_current_i386.deb
	    ;;
	x86_64)
	    curl -O https://dl.google.com/linux/direct/google-talkplugin_current_amd64.deb
	    ;;
	*)
	    show_error "Couldn't find a download that matches your system." && thirdparty
	    ;;
	esac
	# Install package(s)
	echo 'Installing Google Talk Plugin...'
	show_warning 'Requires root privileges:'
	sudo dpkg -i google-talkplugin_current*.deb
	sudo apt-get install -fy
	# Cleanup and finish
	rm google-talkplugin_current*.deb
	show_success 'Done.'
	thirdparty
}