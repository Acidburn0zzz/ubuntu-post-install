#!/bin/bash

# Sublime Text 3
function sublime-text {
	# Variables
	PACKAGE=sublime-text
	NAME="Sublime Text 3"
	# Check if already installed
	show_info 'Checking if already installed...'
    PKGCHECK=$(dpkg-query -W --showformat='${Status}\n' $PACKAGE|grep "install ok installed")
    if [ "" == "$PKGCHECK" ]; then
        show_info 'Not installed. Proceeding'
		show_info 'Downloading Sublime Text 3 (build 3114)...'
		# Download Debian file that matches system architecture
		case `uname -i` in
		    i386|i486|i586|i686)
		        curl -O https://download.sublimetext.com/sublime-text_build-3114_i386.deb
		        ;;
		    x86_64)
		        curl -O https://download.sublimetext.com/sublime-text_build-3114_amd64.deb
		        ;;
		    *)
		        whiptail --title "No remote packages available to download." --msgbox "Error." 8 78
		        ;;
		esac
		# Install package(s)
		show_info 'Installing Sublime Text 3 (build 3114)...'
		show_warning 'Requires root privileges'
		sudo dpkg -i sublime-text_build-3114*.deb
		sudo apt-get install -fy
		# Create symbolic link
		show_info 'Creating symbolic link...'
		show_warning 'Requires root privileges'
		sudo ln -sf /opt/sublime_text/sublime_text /usr/bin/sublime
		# Cleanup and finish
		rm sublime-text_build-3114*.deb
		show_success 'Done.'
	    whiptail --title "Finished" --msgbox "Installation $NAME complete." 8 78
		thirdparty
    else
        # Already installed
        show_success 'Already installed.'
	    whiptail --title "Finished" --msgbox "$NAME is already installed." 8 78
	    thirdparty
    fi
}