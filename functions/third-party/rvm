#!/bin/bash

# RVM
function rvm {
    # Variables
    NAME="Ruby Version Manager"
    # Check if already installed
    show_info 'Checking if already installed...'
    if [ ! -f $HOME/.rvm/installed.at ];
        show_info 'Not installed. Proceeding'
    	# Add key(s)
    	show_info 'Adding key to keyring...'
        gpg --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3
    	# Install
    	show_info 'Installing RVM...'
        \curl -sSL https://get.rvm.io | bash -s stable --ruby
        # \curl -sSL https://get.rvm.io | bash # Uncomment for development version
        # Done
        show_success 'Done.'
        whiptail --title "Finished" --msgbox "Installation of $NAME complete." 8 78
        thirdparty
    else    
        # Already installed
        show_success 'Already installed.'
        whiptail --title "Finished" --msgbox "$NAME is already installed." 8 78
        thirdparty
    fi
}